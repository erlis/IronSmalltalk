<?xml version="1.0" encoding="utf-8" ?>
<Lexer>
	<Token name="EOL" expression="\r?\n" skip="false" ignorecase="false" />
	<Token name="WhiteSpace" expression="[ \t]+" skip="true" ignorecase="false" />
	<Token name="Selector" expression="[a-zA-Z_$][a-zA-Z0-9_$]*:" skip="false" ignorecase="true" />
	<Token name="Symbol" expression="#[a-zA-Z_$][a-zA-Z0-9_$]*:" skip="false" ignorecase="true" />
	<Token name="Identifier" expression="[a-zA-Z][a-zA-Z0-9]*" skip="false" ignorecase="true" />

	<Token name="Word" expression="0[Xx][0-9A-Fa-f]{4}" skip="false" ignorecase="true" />
	<Token name="Byte" expression="0[Xx][0-9A-Fa-f]{2}" skip="false" ignorecase="true" />
	<Token name="ByteRegister" expression="[A-Da-d][HLhl]" skip="false" ignorecase="true" />
	<Token name="WordRegister" expression="[A-Da-d][Xx]" skip="false" ignorecase="true" />
	<Token name="Comma" expression="," skip="false" ignorecase="false" />
	<Token name="LeftBracket" expression="\[" skip="false" ignorecase="false" />
	<Token name="RightBracket" expression="\]" skip="false" ignorecase="false" />
	<Token name="Plus" expression="\+" skip="false" ignorecase="false" />
	
	<Token name="Character" expression="$." skip="false" ignorecase="false" />
	
	<Token name="Comment" expression="\&quot;.*\&quot;" skip="true" ignorecase="false" />
	
	<Token name="Invalid" expression="[^\s]+" skip="false" ignorecase="false" />
</Lexer>